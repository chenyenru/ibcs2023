    "version": "0.2.0",
    "configurations": [
        {
            "name": "Console Chat Client (Hamlet)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["-t", "--protocol", "hamlet"]
        },
        {
            "name": "Console Chat Client (Connect to server)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Console Chat Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["-s"]
        }
    ]
}